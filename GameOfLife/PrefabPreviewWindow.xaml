<Window x:Class="GameOfLife.PrefabPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pattern Selector" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <DataTemplate x:Key="PatternTemplate">
            <Border BorderBrush="#DDD" BorderThickness="1" Margin="5" Padding="5" Background="White" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <Viewbox Stretch="Uniform" MaxHeight="120" MaxWidth="220" HorizontalAlignment="Center">
                        <ItemsControl ItemsSource="{Binding Cells}" HorizontalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="{Binding Height}" Columns="{Binding Width}" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#DDD" BorderThickness="1" Width="10" Height="10">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding IsAlive, Converter={StaticResource BoolToColorConverter}}"/>
                                        </Border.Background>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Viewbox>
                    <Button Content="Select" 
                            Command="{Binding DataContext.SelectPatternCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            HorizontalAlignment="Center"
                            Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>
        
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="PatternsList" 
                         ItemsSource="{Binding Patterns}" 
                         ItemTemplate="{StaticResource PatternTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Click="CancelButton_Click" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>
